<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vincer.blogs.mapper.BlogArticleMapper">

    <resultMap type="com.vincer.blogs.domain.BlogArticle" id="BlogArticleResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="title" column="title"/>
        <result property="excerpt" column="excerpt"/>
        <result property="contentType" column="content_type"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="readType" column="readType"/>
        <result property="allowComment" column="allow_comment"/>
        <result property="likes" column="likes"/>
        <result property="views" column="views"/>
        <result property="appreciation" column="appreciation"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>

    <sql id="selectBlogArticleVo">
        select id,
               user_id,
               image_url,
               title,
               excerpt,
               content_type,
               status,
               allow_comment,
               likes,
               views,
               appreciation,
               create_at,
               update_at
        from blog_article
    </sql>

    <select id="selectBlogArticleList" parameterType="com.vincer.blogs.domain.BlogArticle"
            resultMap="BlogArticleResult">
        <include refid="selectBlogArticleVo"/>
        <where>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="imageUrl != null  and imageUrl != ''">and image_url = #{imageUrl}</if>
            <if test="title != null  and title != ''">and title = #{title}</if>
            <if test="excerpt != null  and excerpt != ''">and excerpt = #{excerpt}</if>
            <if test="content != null  and content != ''">and content = #{content}</if>
            <if test="status != null ">and status = #{status}</if>
            <if test="contentType != null ">and content_type = #{content_type}</if>
            <if test="allowComment != null ">and allow_comment = #{allowComment}</if>
            <if test="likes != null ">and likes = #{likes}</if>
            <if test="views != null ">and views = #{views}</if>
            <if test="appreciation != null ">and appreciation = #{appreciation}</if>
            <if test="createAt != null ">and create_at = #{createAt}</if>
            <if test="updateAt != null ">and update_at = #{updateAt}</if>
        </where>
    </select>

    <select id="selectBlogArticleById" parameterType="Long" resultMap="BlogArticleResult">
        <include refid="selectBlogArticleVo"/>
        where id = #{id}
    </select>

    <insert id="insertBlogArticle" parameterType="com.vincer.blogs.domain.BlogArticle">
        insert into blog_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="title != null">title,</if>
            <if test="excerpt != null">excerpt,</if>
            <if test="contentType != null">content_type,</if>
            <if test="content != null">content,</if>
            <if test="status != null">status,</if>
            <if test="allowComment != null">allow_comment,</if>
            <if test="likes != null">likes,</if>
            <if test="views != null">views,</if>
            <if test="appreciation != null">appreciation,</if>
            <if test="createAt != null">create_at,</if>
            <if test="updateAt != null">update_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="title != null">#{title},</if>
            <if test="excerpt != null">#{excerpt},</if>
            <if test="contentType != null">content_type,</if>
            <if test="content != null">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="allowComment != null">#{allowComment},</if>
            <if test="likes != null">#{likes},</if>
            <if test="views != null">#{views},</if>
            <if test="appreciation != null">#{appreciation},</if>
            <if test="createAt != null">#{createAt},</if>
            <if test="updateAt != null">#{updateAt},</if>
        </trim>
    </insert>

    <update id="updateBlogArticle" parameterType="BlogArticle">
        update blog_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="title != null">title = #{title},</if>
            <if test="excerpt != null">excerpt = #{excerpt},</if>
            <if test="contentType != null">content_type,</if>
            <if test="content != null">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="allowComment != null">allow_comment = #{allowComment},</if>
            <if test="likes != null">likes = #{likes},</if>
            <if test="views != null">views = #{views},</if>
            <if test="appreciation != null">appreciation = #{appreciation},</if>
            <if test="createAt != null">create_at = #{createAt},</if>
            <if test="updateAt != null">update_at = #{updateAt},</if>
        </trim>
        where id = #{id}
    </update>

</mapper>